<Window x:Class="ExcelSpanUtility.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExcelSpanUtility"
        mc:Ignorable="d"
        Title="Excel Multi-Monitor Utility" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock VerticalAlignment="Center" FontSize="11" Foreground="Blue" Margin="0,0,0,10" TextWrapping="Wrap">
                <TextBlock.Text>📋 Instructions: 1) Select an Excel window  2) Select 2+ monitors  3) Click Span</TextBlock.Text>
            </TextBlock>
            <StackPanel Orientation="Horizontal">
                <Button Name="RefreshButton" Click="RefreshButton_Click" Content="Refresh" Width="100"/>
                <Button Name="SpanMonitorsButton" Click="SpanMonitorsButton_Click" Content="Span Selected Monitors" Width="150" Margin="10,0,0,0"/>
                <Button Name="RestoreButton" Click="RestoreButton_Click" Content="Restore Window" Width="120" Margin="10,0,0,0"/>
            </StackPanel>
        </StackPanel>

        <GroupBox Grid.Row="1" Header="Excel Windows" Margin="10">
            <ListBox Name="ExcelWindowsListBox" SelectionMode="Single">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="3" Padding="5" Margin="2">
                            <StackPanel>
                                <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Handle}" FontSize="10" Foreground="Gray"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>

        <GroupBox Grid.Row="2" Header="Available Monitors" Margin="10">
            <ListBox Name="MonitorsListBox" SelectionMode="Multiple">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="3" Padding="5" Margin="2">
                            <StackPanel>
                                <TextBlock Text="{Binding DisplayName}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding DeviceName}" FontSize="10" Foreground="Gray"/>
                                <TextBlock FontSize="10" Foreground="DarkGreen">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value=""/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsPrimary}" Value="True">
                                                    <Setter Property="Text" Value="★ Primary Monitor"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>

        <StatusBar Grid.Row="3">
            <StatusBarItem>
                <TextBlock Name="StatusText" Text="Ready"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="Developed by Juan C. Ribot" FontSize="10" Foreground="Gray"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
